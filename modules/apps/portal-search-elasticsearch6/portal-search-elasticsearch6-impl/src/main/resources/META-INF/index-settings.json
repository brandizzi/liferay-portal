{
	"analysis": {
		"analyzer": {
			"english_liferay": {
				"filter": [
					"english_possessive_stemmer",
					"lowercase",
					"english_stop",
					"english_stemmer",
					"english_synonyms"
				],
				"tokenizer": "standard"
			},
			"keyword_lowercase": {
				"filter": "lowercase",
				"tokenizer": "keyword"
			}
		},
		"filter": {
			"english_possessive_stemmer": {
				"language": "possessive_english",
				"type": "stemmer"
			},
			"english_stemmer": {
				"language": "english",
				"type": "stemmer"
			},
			"english_stop": {
				"stopwords": "_english_",
				"type": "stop"
			},
			"english_synonyms": {
				"lenient": true,
				"synonyms": [],
				"type": "synonym"
			}
		}
	}
}